# Backend Example Environment Variables (No secrets)
PORT=4000
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/devdash
JWT_SECRET=change_me_in_production
CORS_ORIGIN=http://localhost:5173
NODE_ENV=development
TRUST_PROXY=1
LOGIN_RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_SKIP_IN_DEV=1
RATE_LIMIT_WHITELIST=127.0.0.1,::1
DVC_SERVER_SDK_KEY=__optional__

# SMTP / Password Reset
FRONTEND_URL=http://localhost:5173
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.address@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=DevDash <your.address@gmail.com>

# Password reset rate limiting (optional overrides)
# Window (ms), max requests per IP and per email within that window
PASSWORD_RESET_WINDOW_MS=900000
PASSWORD_RESET_MAX_PER_IP=30
PASSWORD_RESET_MAX_PER_EMAIL=5
# Set ENABLE_RESET_RATE_LIMIT=true in tests if you want to exercise limiter
ENABLE_RESET_RATE_LIMIT=false

# Notes:
# 1. Copy this file to .env and replace values.
# 2. For Gmail enable 2FA + generate App Password.
